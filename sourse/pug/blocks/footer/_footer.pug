mixin messengersItem(i)
	+e.item(href="#")
		+e.iconWrap
			+icon(icon)
		+e.text= t

mixin footer()
	+b.FOOTER.footer
		+pic('footer-bg','bg')(class="picture-bg")
		.container
			.row
				.col.d-none.d-md-block
					+b.logo-block
						img(src="img/@2x/logo.png", alt="")
						div
							+e.title «Санто Арабика»
							+e.text Производим капсульный кофе стандарта Nespresso
				+e.col.col-auto
					+e.write Пишите по всем вопросам, #[span.dot] мы онлайн
					+b.mass-block
						+e.item(href="#")
							+e.iconWrap
								+icon("telegram")
							+e.text Telegram
						+e.item(href="#")
							+e.iconWrap
								+icon("tel")
							+e.text WhatsApp
				.col-auto
					+e.contactWrap
						+e.tel(href=`tel${tels}`)= tel
						+e.btn(href="#") Перезвоните мне
		+e.foot
			.container
				.row.justify-content-between
					.col-sm-auto
						+e.polite(href="#") Политика конфиденциальности
					.col-sm-auto
						+e.dev
							span Разработка сайта
							+e.devLogo(href="https://simonov.marketing" target='_blank')
								img.res-i(src="img/@2x/simonov.png", alt="" loading="lazy")

